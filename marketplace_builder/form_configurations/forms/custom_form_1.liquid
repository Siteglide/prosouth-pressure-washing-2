---
name: custom_form_1
resource: Customization
resource_owner: anyone
redirect_to: /
configuration:
  properties:
    _is_form:
      name: _is_form
      type: string
    _form_name:
      name: _form_name
      type: string
      value: 'Request a Quote'
    name:
      name: name
      type: string
      validation: { presence: true }
    email:
      name: email
      type: string
      validation: { presence: true }
    custom_field_1:
      name: 'Home Phone Number'
      type: input_text
      required: false
      validation: {}
    custom_field_2:
      name: 'Service Requested'
      type: input_text
      required: false
      validation: {}
    custom_field_3:
      name: 'How did You Hear About Us'
      type: input_text
      required: false
      validation: {}
    custom_field_4:
      name: 'Comments / Additional Information'
      type: textarea
      required: false
      validation: {}
default_payload: > 
  {% if form %}
  {
    "properties_attributes": {
        "_is_form": "true"
      }
    }
  {% endif %}
---
{%- include 'form', id:'custom_form_1' -%}